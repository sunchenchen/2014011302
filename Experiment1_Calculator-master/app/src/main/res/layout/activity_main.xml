<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pc.experiment1_calculator.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="50"
        android:id="@+id/editText"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"
        android:textSize="@dimen/abc_text_size_display_2_material"/>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*"
        android:weightSum="4"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/editText">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.8" >

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="7"
                android:background="@android:color/white"
                android:textSize="@dimen/abc_text_size_display_1_material"/>

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="8"
                android:background="@android:color/white"
                android:textSize="@dimen/abc_text_size_display_1_material"/>

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="9"
                android:background="@android:color/white"
                android:textSize="@dimen/abc_text_size_display_1_material"/>
            <Button
                android:id="@+id/buttonplus"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="+"
                android:background="@android:color/white"
                android:textSize="@dimen/abc_text_size_display_1_material"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.8" >

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".3"
                android:text="4"
                android:background="@android:color/white"
                android:textSize="@dimen/abc_text_size_display_1_material"/>

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".3"
                android:text="5"
                android:background="@android:color/white"
                android:textSize="@dimen/abc_text_size_display_1_material"/>

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".3"
                android:text="6"
                android:background="@android:color/white"
                android:textSize="@dimen/abc_text_size_display_1_material"/>
            <Button
                android:id="@+id/buttonminus"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="-"
                android:background="@android:color/white"
                android:textSize="@dimen/abc_text_size_display_1_material"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.8" >

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".3"
                android:text="1"
                android:background="@android:color/white"
                android:textSize="@dimen/abc_text_size_display_1_material"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".3"
                android:text="2"
                android:background="@android:color/white"
                android:textSize="@dimen/abc_text_size_display_1_material"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".3"
                android:text="3"
                android:background="@android:color/white"
                android:textSize="@dimen/abc_text_size_display_1_material"/>

            <Button
                android:id="@+id/buttontimes"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="*"
                android:background="@android:color/white"
                android:textSize="@dimen/abc_text_size_display_1_material"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.8" >

            <Button
                android:id="@+id/buttondot"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".3"
                android:text="."
                android:background="@android:color/white"
                android:textSize="@dimen/abc_text_size_display_1_material"/>

            <Button
                android:id="@+id/button0"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".3"
                android:text="0"
                android:background="@android:color/white"
                android:textSize="@dimen/abc_text_size_display_1_material"/>

            <Button
                android:id="@+id/buttonclear"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".3"
                android:text="C"
                android:background="@android:color/white"
                android:textSize="@dimen/abc_text_size_display_1_material"/>

            <Button
                android:id="@+id/buttondivisor"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="/"
                android:background="@android:color/white"
                android:textSize="@dimen/abc_text_size_display_1_material"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.8" >

            <Button
                android:id="@+id/buttonleftbracket"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="0.3"
                android:text="("
                android:background="@android:color/white"
                android:textSize="@dimen/abc_text_size_display_1_material"/>

            <Button
                android:id="@+id/buttonrightbracket"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="0.3"
                android:text=")"
                android:background="@android:color/white"
                android:textSize="@dimen/abc_text_size_display_1_material"/>

            <Button
                android:id="@+id/buttonnegative"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="0.3"
                android:text="(-)"
                android:background="@android:color/white"
                android:textSize="@dimen/abc_text_size_display_1_material"/>
            <Button
                android:id="@+id/buttonequal"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".3"
                android:text="="
                android:background="@color/colorPrimaryDark"
                android:textSize="@dimen/abc_text_size_display_1_material"/>
        </TableRow>
    </TableLayout>


</RelativeLayout>
